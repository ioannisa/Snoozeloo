<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Snoozeloo" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.Snoozeloo.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_alarm</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/splash_blue</item>
        <!-- Switch to the original Theme when splash screen concludes -->
        <item name="postSplashScreenTheme">@style/Theme.Snoozeloo</item>
    </style>

    <style name="Theme.Snoozeloo.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <!-- Make the background transparent to avoid default dialog backgrounds -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Ensure the window is floating -->
        <item name="android:windowIsFloating">true</item>
        <!-- Disable dimming of the background -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- Optional: Remove default padding/margins -->
        <item name="android:windowMinWidthMajor">0%</item>
        <item name="android:windowMinWidthMinor">0%</item>
    </style>

</resources>